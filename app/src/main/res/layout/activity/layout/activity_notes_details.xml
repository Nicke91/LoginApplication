<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@android:color/darker_gray"
    tools:context="com.example.nicke.loginapplication.NotesDetailsActivity">

    <LinearLayout
        android:id="@+id/notes_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:text="@string/title"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/notes_title_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/notes_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/movieItemBackground"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_weight="1"

        android:textSize="23sp"
        android:textColor="@android:color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pickedGray">

            <Button
                android:id="@+id/notes_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_note"
                android:background="@color/movieItemBackground"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/notes_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/movieItemBackground"
                android:text="@string/delete_note"
                android:textColor="@android:color/white"/>

        </RelativeLayout>



</LinearLayout>
