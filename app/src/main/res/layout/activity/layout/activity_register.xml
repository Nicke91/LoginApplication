<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/registerBackground"
    android:padding="10dp"
    tools:context="com.example.nicke.loginapplication.RegisterActivity">

    <EditText
        android:id="@+id/name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/editTextBackground"
        android:hint="@string/name_textView"
        android:padding="8dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_editText"
        android:layout_marginTop="18dp"
        android:inputType="textEmailAddress"
        android:background="@color/editTextBackground"
        android:hint="@string/email_editText"
        android:padding="8dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/register_userName_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_editText"
        android:layout_marginTop="18dp"
        android:inputType="textPersonName"
        android:hint="@string/user_name_editText"
        android:background="@color/editTextBackground"
        android:padding="8dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/register_password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_editText"
        android:layout_below="@+id/register_userName_editText"
        android:layout_marginTop="18dp"
        android:inputType="textPassword"
        android:background="@color/editTextBackground"
        android:hint="@string/password_editText"
        android:padding="8dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/register_password_confirm_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/register_password_editText"
        android:layout_below="@+id/register_password_editText"
        android:layout_marginTop="18dp"
        android:inputType="textPassword"
        android:background="@color/editTextBackground"
        android:hint="@string/confirm_password_editText"
        android:padding="8dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_confirm_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/register_button"
        android:background="@color/movieItemBackground"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/register_log_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="@string/already_registred_textView"
        android:textColor="@android:color/white"/>
</RelativeLayout>
