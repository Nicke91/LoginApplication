<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/whiteish"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/movieItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/name_textView"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/name_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/row1"/>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/row1"
        android:background="@color/movieItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/email_editText"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/email_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/row2"/>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/row2"
        android:background="@color/movieItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/userName_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/user_name_editText"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/userName_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/row3"/>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/row3"
        android:background="@color/movieItemBackground"
        android:padding="10dp">

        <TextView
            android:id="@+id/password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_editText"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/password_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/row4"/>

   <SlidingDrawer
       android:id="@+id/settingsDrawer"
       android:layout_width="wrap_content"
       android:layout_height="300dp"
       android:orientation="vertical"
       android:layout_below="@+id/row4"
       android:layout_alignParentBottom="true"
       android:content="@+id/drawerContent"
       android:handle="@+id/slideButton"
       android:layout_marginTop="20dp">

       <Button
           android:id="@+id/slideButton"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/navigationBackground"
           android:text="@string/change_settings_button"
           android:textColor="@android:color/white"/>

       <LinearLayout
           android:id="@+id/drawerContent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@color/movieItemBackground"
           android:gravity="center"
           android:orientation="vertical"
           android:padding="1dip">

           <Button
               android:id="@+id/changeName_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="2dp"
               android:background="@color/navigationBackground"
               android:textColor="@android:color/white"
               android:text="@string/name_textView"/>

           <Button
               android:id="@+id/changeEmail_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="2dp"
               android:background="@color/navigationBackground"
               android:text="@string/email_editText"/>

           <Button
               android:id="@+id/changeUserName_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="2dp"
               android:background="@color/navigationBackground"
               android:text="@string/user_name_editText"/>

           <Button
               android:id="@+id/changePassword_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="2dp"
               android:background="@color/navigationBackground"
               android:text="@string/password_editText"/>

           <Button
               android:id="@+id/deleteProfile_button"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="2dp"
               android:background="@color/navigationBackground"
               android:text="@string/delete_user_item"/>



       </LinearLayout>

   </SlidingDrawer>

</RelativeLayout>