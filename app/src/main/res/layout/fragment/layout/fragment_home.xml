<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteishrotated">

    <LinearLayout
        android:id="@+id/welcome_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


    <TextView
        android:id="@+id/welcome_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="23sp"
        android:layout_marginTop="80dp"
        android:text="@string/welcome"
        android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/home_name_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textSize="23sp"
            android:textColor="@android:color/white" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_layout"
        android:layout_above="@+id/add_button_layout"
        android:layout_marginTop="20dp"

        android:background="@color/movieItemBackground">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/add_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/navigationBackground">

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:background="@drawable/add_round_button" />

    </LinearLayout>


</RelativeLayout>